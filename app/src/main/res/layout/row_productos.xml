<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    cardview:cardCornerRadius="4dp"
    cardview:cardElevation="5dp"

    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ImageView_producto"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#372ab0" />
        <TextView
            android:id="@+id/TextView_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ImageView_producto"
            android:layout_toRightOf="@+id/ImageView_producto"
            android:text="Large Text"
            android:textSize="30sp"
            />
        <TextView
            android:id="@+id/TextView_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView_nombre"
            android:layout_toEndOf="@+id/ImageView_producto"
            android:layout_toRightOf="@+id/ImageView_producto"
            android:text="Large Text"
            android:textSize="10sp"
            />


    </RelativeLayout>


</android.support.v7.widget.CardView>


